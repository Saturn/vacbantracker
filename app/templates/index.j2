{% extends 'base.j2' %}

{% block title %}Home{% endblock %}

{% block content %}

<div class="row">
    <div class="col-xl-8 col-lg-7">

        <div class="jumbotron search-box">
          <h2>Search</h2>
          <form action="/search" method="POST">
            <div class="form-group">
                <textarea
                    class="form-control"
                    rows="5"
                    name="steamids"
                    placeholder="Paste steamids in here"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary btn-lg">Search</button>
            </div>
            </form>
        </div>

    </div>

    {% if not current_user.is_authenticated %}
    <div class="col-xl-4 col-lg-5 col-md-7">
        {% include 'snippets/login_form.j2' %}
    </div>
    {% endif %}


</div>


{% endblock content %}
