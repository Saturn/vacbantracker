
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>{% block title %}{% endblock %} - VACBantracker</title>

    <link href="/static/css/app.css" rel="stylesheet">

  </head>

  <body>



    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container">

      <a class="navbar-brand" href="/">VACBanTracker</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          {% if current_user.is_authenticated %}
          {% set drop_label = 'My Account' if current_user.steam_user == False else current_user.steam_oid.profile.personaname %}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="https://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ drop_label }}</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <a class="dropdown-item" href="/settings">Settings</a>
              <a class="dropdown-item" href="/logout">Logout</a>
            </div>
          </li>
          {% else %}
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
          {% endif %}

        </ul>
      </div>

      </div>
    </nav>






    <div class="container">

      <div class="flashes">
        {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}

        {% for category, message in messages %}
          {% if category == "message" %}
            {% set category = "info" %}
          {% endif %}

          <div class="alert alert-{{category}} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

        {% endfor %}

        {% endif %}
        {% endwith %}
      </div>



          {% block content %}<h1>This is the base template.</h1>{% endblock content %}










    </div><!-- /.container -->



    <footer class="footer">
      <div class="container">
        <p class="footer-copyright">
          VACBanTracker &copy 2018
        </p>
        <ul class="footer-links">
          <li><a href="/about">About</a></li>
          <li><a href="/privacy_policy">Privacy Policy</a></li>
          <li><a href="/feedback">Feedback</a></li>
        </ul>


      </div>
    </footer>








    <script src="/static/js/app.js"></script>
  </body>
</html>
